<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="@string/article_link_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/article_viewer_button"
        android:padding="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/source_title_text_view"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/article_title_text_view"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:padding="10dp"
        android:layout_below="@+id/source_title_text_view"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/article_description_text_view"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_below="@+id/article_title_text_view"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_height="250dp"
        android:layout_width="250dp"
        app:srcCompat="@drawable/background_rounded_corner"
        android:scaleType="centerCrop"
        android:id="@+id/article_image"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/article_description_text_view"
        android:layout_centerHorizontal="true" />

</RelativeLayout>